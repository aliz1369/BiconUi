<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_gradient_question"
    android:padding="@dimen/_20sdp">


    <TextView
        android:id="@+id/tv_question_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="A: Question"
        android:textSize="@dimen/_20ssp"
        android:textColor="@color/white"
        android:fontFamily="@font/metropolismedium"
        android:layout_marginTop="@dimen/_20sdp"/>

    <TextView
        android:id="@+id/tv_question_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_question_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/_24sdp"
        android:text="1.Question"
        android:textSize="@dimen/_16ssp"
        android:textColor="@color/white"
        android:fontFamily="@font/metropolismedium"
        android:layout_marginTop="@dimen/_20sdp"/>

    <RadioGroup
        android:id="@+id/rg_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_question_1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
       android:layout_marginTop="@dimen/_10sdp">
        <RadioButton
            android:id="@+id/answer_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:elevation="4dp"
            android:fontFamily="@font/metropolismedium"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp">

        </RadioButton>

        <RadioButton
            android:id="@+id/answer_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:elevation="4dp"
            android:fontFamily="@font/metropolismedium"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp">

        </RadioButton>
        <RadioButton
            android:id="@+id/answer_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:elevation="4dp"
            android:fontFamily="@font/metropolismedium"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp">

        </RadioButton>
        <RadioButton
            android:id="@+id/answer_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:elevation="4dp"
            android:fontFamily="@font/metropolismedium"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp">

        </RadioButton>

        <RadioButton
            android:id="@+id/answer_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:elevation="4dp"
            android:fontFamily="@font/metropolismedium"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp">

        </RadioButton>

        <RadioButton
            android:id="@+id/answer_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:elevation="4dp"
            android:fontFamily="@font/metropolismedium"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp">

        </RadioButton>
        <RadioButton
            android:id="@+id/answer_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:elevation="4dp"
            android:fontFamily="@font/metropolismedium"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp">

        </RadioButton>
        <RadioButton
            android:id="@+id/answer_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:elevation="4dp"
            android:fontFamily="@font/metropolismedium"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp">

        </RadioButton>

        <RadioButton
            android:id="@+id/answer_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:elevation="4dp"
            android:fontFamily="@font/metropolismedium"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp">

        </RadioButton>

    </RadioGroup>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_question_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rg_answer"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/_24sdp"
        android:text="2.Question"
        android:textSize="@dimen/_16ssp"
        android:textColor="@color/white"
        android:fontFamily="@font/metropolismedium"
        android:layout_marginTop="@dimen/_20sdp"/>

    <RadioGroup
        android:visibility="gone"
        android:id="@+id/rg_answer_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_question_2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:elevation="4dp"
            android:fontFamily="@font/metropolismedium"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp">

        </RadioButton>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:elevation="4dp"
            android:fontFamily="@font/metropolismedium"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp">

        </RadioButton>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:elevation="4dp"
            android:fontFamily="@font/metropolismedium"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp">

        </RadioButton>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:elevation="4dp"
            android:fontFamily="@font/metropolismedium"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp">

        </RadioButton>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:elevation="4dp"
            android:fontFamily="@font/metropolismedium"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp">

        </RadioButton>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:elevation="4dp"
            android:fontFamily="@font/metropolismedium"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp">

        </RadioButton>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:elevation="4dp"
            android:fontFamily="@font/metropolismedium"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp">

        </RadioButton>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:elevation="4dp"
            android:fontFamily="@font/metropolismedium"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp">

        </RadioButton>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:elevation="4dp"
            android:fontFamily="@font/metropolismedium"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp">

        </RadioButton>

    </RadioGroup>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Next"
        android:textSize="@dimen/_18ssp"
        android:textColor="@color/white"
        android:fontFamily="@font/metropolismedium"
        android:textAllCaps="false"
        android:background="@drawable/rounded_button_gradient_question"/>

</androidx.constraintlayout.widget.ConstraintLayout>