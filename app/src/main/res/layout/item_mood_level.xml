<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="Doctor evelation"
        android:textSize="@dimen/_10ssp"
        android:textColor="#a5a5a5"
        android:fontFamily="@font/metropolismedium"/>

    <TextView
        android:id="@+id/tv_mood_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Mood Progress"
        android:textSize="@dimen/_16ssp"
        android:textColor="#dfdede"
        android:fontFamily="@font/metropolismedium"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_mood_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="17th January 2021"
        android:textSize="@dimen/_10ssp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="#dfdede"
        android:fontFamily="@font/metropolismedium"/>


    <TextView
        android:id="@+id/tv_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="+1%"
        android:textColor="@color/background"
        android:textSize="@dimen/_28ssp"
        android:fontFamily="@font/metropolisregular"/>





</androidx.constraintlayout.widget.ConstraintLayout>