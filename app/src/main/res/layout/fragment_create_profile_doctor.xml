<?xml version="1.0" encoding="utf-8"?>
<!--create dr profile-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/_15ssp"
    android:background="@drawable/topcorner_layout_gray">

    <TextView
        android:id="@+id/tv_createprofile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:fontFamily="@font/metropolislight"
        android:text="@string/create_profile"
        android:textColor="@color/white"
        android:textSize="@dimen/_28ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_createprofile_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<!--profile photo-->
            <RelativeLayout
                android:id="@+id/rl_profilephoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20ssp"
                android:layout_marginTop="@dimen/_16sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_profilepic_tite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_photo"
                    android:textColor="@color/light_gray" />

                <TextView
                    android:id="@+id/tv_profilepic_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_profilepic_tite"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/required"
                    android:textColor="@color/orange" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                    app:tint="@color/black" />
            </RelativeLayout>

<!--name-->
            <RelativeLayout
                android:id="@+id/rl_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20ssp"
                android:layout_marginTop="@dimen/_20ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rl_profilephoto">

                <TextView
                    android:id="@+id/tv_name_tite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:textColor="@color/light_gray" />

                <TextView
                    android:id="@+id/tv_name_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name_tite"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/required"
                    android:textColor="@color/orange" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                    app:tint="@color/black" />
            </RelativeLayout>
<!--birthday-->
            <RelativeLayout
                android:id="@+id/rl_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20ssp"
                android:layout_marginTop="@dimen/_20ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rl_name">

                <TextView
                    android:id="@+id/tv_birthday_tite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/birthday"
                    android:textColor="@color/light_gray" />

                <TextView
                    android:id="@+id/tv_birthday_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_birthday_tite"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/optional_2"
                    android:textColor="@color/light_gray" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                    app:tint="@color/black" />
            </RelativeLayout>
<!--speciality-->
            <RelativeLayout
                android:id="@+id/rl_speciality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20ssp"
                android:layout_marginTop="@dimen/_20ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rl_birthday">

                <TextView
                    android:id="@+id/tv_speciality_tite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/specialty"
                    android:textColor="@color/light_gray" />

                <TextView
                    android:id="@+id/tv_speciality_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_speciality_tite"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/required"
                    android:textColor="@color/orange" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                    app:tint="@color/black" />
            </RelativeLayout>
<!--id card-->
            <RelativeLayout
                android:id="@+id/rl_idverification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20ssp"
                android:layout_marginTop="@dimen/_20ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rl_speciality">

                <TextView
                    android:id="@+id/tv_idverification_tite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/id_verification"
                    android:textColor="@color/light_gray" />

                <TextView
                    android:id="@+id/tv_idverification_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_idverification_tite"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/required"
                    android:textColor="@color/orange" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                    app:tint="@color/black" />
            </RelativeLayout>
<!--education certificate-->
            <RelativeLayout
                android:id="@+id/rl_educationcertificate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20ssp"
                android:layout_marginTop="@dimen/_20ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rl_idverification">

                <TextView
                    android:id="@+id/tv_educationcertificate_tite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/education_certificate"
                    android:textColor="@color/light_gray" />

                <TextView
                    android:id="@+id/tv_educationcertificate_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_educationcertificate_tite"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/optional_2"
                    android:textColor="@color/light_gray" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                    app:tint="@color/black" />
            </RelativeLayout>
<!--address-->
            <RelativeLayout
                android:id="@+id/rl_cliniqueaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20ssp"
                android:layout_marginTop="@dimen/_20ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rl_educationcertificate">

                <TextView
                    android:id="@+id/tv_cliniqueaddress_tite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/clinic_address"
                    android:textColor="@color/light_gray" />

                <TextView
                    android:id="@+id/tv_cliniqueaddress_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_cliniqueaddress_tite"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/optional_2"
                    android:textColor="@color/light_gray" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                    app:tint="@color/black" />
            </RelativeLayout>
<!--email-->
            <RelativeLayout
                android:id="@+id/rl_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20ssp"
                android:layout_marginTop="@dimen/_20ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rl_cliniqueaddress">

                <TextView
                    android:id="@+id/tv_email_tite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textColor="@color/light_gray" />

                <TextView
                    android:id="@+id/tv_email_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_email_tite"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/optional_2"
                    android:textColor="@color/light_gray" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                    app:tint="@color/black" />
            </RelativeLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_register_asuser"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_65sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:backgroundTint="@color/dark_gray"
                android:fontFamily="@font/metropolismedium"
                android:text="@string/send"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_20ssp"
                app:cornerRadius="@dimen/_10ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rl_email" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>