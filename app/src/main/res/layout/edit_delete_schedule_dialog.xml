<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EBEBEB">

    <TextView
        android:id="@+id/tv_edit_delete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14ssp"
        android:textAlignment="center"
        android:textColor="#5c5c5c"
        android:fontFamily="@font/metropolisregular"
        android:text="Do you want to edit or delete schedule ?"/>

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_38sdp"
        android:text="Edit"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_delete"
        app:layout_constraintLeft_toLeftOf="@id/tv_edit_delete"
        android:layout_marginTop="@dimen/_40sdp"
        android:background="@drawable/rounded_button"
        android:textSize="@dimen/_12ssp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/metropolismedium"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_10sdp">

    </Button>

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_38sdp"
        android:text="Delete"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_delete"
      app:layout_constraintRight_toRightOf="@id/tv_edit_delete"
        android:layout_marginTop="@dimen/_40sdp"
        android:background="@drawable/rounded_button_2"
        android:textSize="@dimen/_12ssp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/metropolismedium"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_10sdp">

    </Button>



</androidx.constraintlayout.widget.ConstraintLayout>